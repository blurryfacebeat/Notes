const str1 = 'Переходите на мой лучший сайт http://pornoxxx.com - не пожалеете!';
const str2 = 'Спасибо за информацию, было полезно про http!';

const em = 'gwqlgwq@';
const em1 = 'gwqlgwq@mail.ru';

function isHaveLink(str) {
    // ? - символ может быть, а может и не быть
    // если хотим поставить / - \
    // . - произвольный символ дальше
    // + будет повторяться 1 и более раз
    // [a-z] - любой символ от a до z ({2,} - должен будет повторяться 2 и более раз)
    // [0-9] - любая цифра
    // \s - символ пробела
    // i - позволяет игнорировать регистр
    // m - поиск проводится по всем строкам
    const reg = /https?:\/\/.+?\.[a-z]{2,}\s/im; // ? после + - как только обнаружит ., сразу перестанет искать любой символ
    // Если соответствует регулярному выражению, вернет true
    return str.match(reg);
}

// \d - любая цифра
// g - обходит всю строку, не останавливаясь на первом матче (все совпадения сохраняются массивом)
// .replace(reg, 'a') - заменяет матч в строке на a

// ^ - с рег. выражения должна начинаться строка
// $ - после выражения не должно идти что-то еще
// * - может повторяться сколько угодно раз
function checkEmail(email) { 
    const reg = /^[a-z0-9_] [a-z0-9\._-]*[a-z0-9_]*@([a-z0-9]+[a-z0-9_-]*[a-z0-9]+\.)+[a-z0-9]+$/i;
    return email.match(reg);
}

if (isHaveLink(str1)) {
    console.log('Найдена ссылка в строке!');
}

if (isHaveLink(str2)) {
    console.log('Найдена ссылка в строке!');
}

if (checkEmail(em)) {
    console.log('Правильный email');
}

if (checkEmail(em1)) {
    console.log('Правильный email');
}
